{
  "extends": "airbnb",
  "plugins": [
    "mocha"
  ],
  "installedESLint": true,
  "env": {
    "node": true,
    "mocha": true,
    "jasmine": true
  },
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "strict": [
      0
    ],
    "global-require": [
      0
    ],
    "no-unused-vars": [
      1
    ],
    "space-in-parens": [
      1,
      "never"
    ],
    "max-len": [
      1,
      300
    ],
    "no-unused-expressions": [
      0
    ],
    "object-curly-spacing": [
      0,
      "never"
    ],
    "mocha/no-exclusive-tests": [
      2
    ],
    "newline-per-chained-call": [
      0
    ]
  }
}